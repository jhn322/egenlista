generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ** User model ** //
model User {
  id            String     @id @default(cuid()) @map("_id")
  name          String?
  email         String     @unique
  password      String?    // Make password optional for OAuth users
  image         String?    // Profile image URL
  emailVerified DateTime?  // Required for NextAuth
  role          UserRole   @default(USER)
  accounts      Account[]  // Required for NextAuth
  sessions      Session[]  // Required for NextAuth
  contacts      Contact[]
  subscription  Subscription? // User has one subscription (or none)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// ** NextAuth required models ** //
model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}


model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ** VerificationToken model ** //
model VerificationToken {
  id         String   @id @default(cuid()) @map("_id")
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ** Contact model ** //
model Contact {
  id            String     @id @default(cuid()) @map("_id")
  userId        String  // Owner(user) of the contact
  firstName     String
  lastName      String
  email         String
  phone         String?
  type          ContactType   @default(LEAD)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id])
  @@unique([userId, email]) // Only one contact per user per email
}

// ** UserRole enum ** //
enum UserRole {
  USER
  ADMIN
}

// ** ContactType enum ** //
enum ContactType {
  LEAD      // Someone who might buy
  CUSTOMER  // Someone who has bought
  AMBASSADOR // Someone who promotes/sells for you
}

// ** Subscription model ** //
model Subscription {
  id                 String    @id @default(cuid()) @map("_id")
  userId             String    @unique // Each user has a unique subscription
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  plan               SubscriptionPlanType @default(FREE)
  status             SubscriptionStatus @default(ACTIVE)

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean   @default(false)
  canceledAt         DateTime?
  trialStart         DateTime?
  trialEnd           DateTime?

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

enum SubscriptionPlanType {
  FREE
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  INCOMPLETE
  TRIALING
}


